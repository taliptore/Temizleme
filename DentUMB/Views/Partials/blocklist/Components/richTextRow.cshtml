                    </div>
                </div>







                <div class="inner-page__article">
                    <div class="inner-page__content">

                        <div class="page-content__photo ui-large">

                                @{
                                    if (currentPage is not null)
                                    {
                                        var kapakResmi = currentPage.MainImage as MediaWithCrops;
                                    if (kapakResmi is not null)
                                    {
                                        <img src="@kapakResmi.Url()" alt="@currentPage.Title">
                                    }else
                                    {
                                        <img src="uploads/sayfalar/282b4_w1000d35a.jpg?p=uploads/sayfalar/282b4.jpg&amp;w=1000" alt="@currentPage.Title">
                                    }

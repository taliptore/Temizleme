                            <span class="text">@(page.Name)</span>
                        </a>
                    </li>
                                    

}                   


                 

            </ul>
        </div>

        <div class="mobile-nav__content other">
            <ul>

                <li class="ui-not"><a href="#">@FirmaAdi</a></li>

            </ul>
        </div>

    </div>
   
    <div class="mobile-nav__footer ui-d-flex">
        @if (homePage.SocialIconLinks != null && homePage.SocialIconLinks.Any())
        {
                @Html.GetBlockListHtml(homePage.SocialIconLinks)
        }
        @* <a href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram"></i></a> *@
        <a href="mailto:@homePage.Eposta"><i class="far fa-envelope"></i></a>
        <a href="tel:@homePage.Whatsapp"><i class="fas fa-phone-volume"></i></a>
    </div>
</nav>


@inherits UmbracoViewPage
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels

@{
    var homePage = Model.AncestorOrSelf<ContentModels.Home>();
    var imageCropperValue = homePage.LogoWhite;
    string FirmaAdi = Model.Value<string>("metaDescription");

    var menu = homePage.Children.Where(x => !x.Value<bool>("hideFromTopNavigation")).OrderBy(x => x.Value("NavigationNo"));
  
